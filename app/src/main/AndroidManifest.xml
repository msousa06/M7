<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gp.gpproject">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Create.AdicionarDocenteActivity" />
        <activity
            android:name=".Read.ListarDocentesActivity"
            android:label="@string/title_activity_listar_docentes"/>
        <activity android:name=".Create.AdicionarCategoriaActivity" />
        <activity android:name=".Create.AdicionarDepartamentoActivity" />
        <activity android:name=".Update.EditarDocenteActivity" />
        <activity android:name=".Delete.EliminarDocenteActivity" />
        <activity android:name=".Read.ListarVigilanciasActivity" />
        <activity android:name=".Create.AgendarVigilanciaActivity" />
        <activity android:name=".Create.AdicionarDisciplinaActivity" />
        <activity android:name=".Delete.EliminarVigilanciaActivity" />
        <activity android:name=".Update.EditarVigilanciaActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".Read.SearchDocenteActivity"
            android:label="@string/title_activity_search_docente" />
        <activity android:name=".Read.SearchDocenteResultActivity" />
        <activity
            android:name=".SearchMenuActivity"
            android:label="@string/title_activity_search_menu"/>
        <activity android:name=".Read.SearchVigilanciaResultActivity" />
        <activity android:name=".Read.SearchVigilanciaActivity" />
    </application>

</manifest>